# TradeWizard 3.0 Environment Configuration

# API Keys - Server-side
OPENAI_API_KEY=sk-your-openai-api-key
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key
WITS_API_KEY=your-wits-api-key
HS_CODE_API_KEY=your-hscode-api-key

# API Keys - Client-side (accessible in browser)
NEXT_PUBLIC_WITS_API_KEY=your-wits-api-key
NEXT_PUBLIC_HS_CODE_API_KEY=your-hscode-api-key
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key
NEXT_PUBLIC_USE_MOCK_DATA=false

# OpenAI Configuration
# Project API keys (sk-proj-*) should use: AI_MODEL_URL=https://api.chatgpt.com/chat/completions
# Standard API keys should use: AI_MODEL_URL=https://api.openai.com/v1/chat/completions
AI_MODEL_URL=https://api.openai.com/v1/chat/completions
AI_MODEL_NAME=gpt-4o

# Perplexity Configuration
PERPLEXITY_API_URL=https://api.perplexity.ai

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/tradewizard

# Application Settings
NODE_ENV=development
PORT=3000
HOST=localhost

# Feature Flags
ENABLE_WEBSITE_EXTRACTION=true
ENABLE_PRODUCT_CONSOLIDATION=true
ENABLE_HS_CODE_LOOKUP=true
ENABLE_MARKET_INTELLIGENCE=true
ENABLE_LOGGING=true
ENABLE_CACHING=true
CACHE_TTL=3600
CACHE_EXPIRY_MINUTES=60

# MCP Services Configuration
UAE_MCP_ENABLED=true
UK_MCP_ENABLED=true
COMPLIANCE_MCP_URL=http://localhost:3001/api/compliance
MARKET_INTELLIGENCE_MCP_URL=http://localhost:3001/api/market-intelligence

# HS Code Service Configuration
CONFIDENCE_THRESHOLD=0.7
MAX_SUGGESTIONS=5

# Debug Settings
DEBUG_API_KEYS=false

# Puppeteer Configuration
PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium-browser
PUPPETEER_HEADLESS=true

# Scraping Configuration
MAX_SCRAPING_RETRIES=3
SCRAPING_TIMEOUT=30000
PUPPETEER_TIMEOUT=30000

# Cache Configuration
MAX_CACHE_SIZE=1000 # Maximum number of cached responses 